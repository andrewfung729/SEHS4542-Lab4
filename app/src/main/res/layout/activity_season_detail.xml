<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_season_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeasonDetailActivity">

    <TextView
        android:id="@+id/tvSeasonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#3F51B5"
        android:padding="16dp"
        android:text="Here is Spring photo"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivSeasonImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvSeasonName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Season Image"
        android:scaleType="fitCenter"
        tools:src="@drawable/spring" />

</RelativeLayout>
